{
    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceFolder}/tests/system-test",
            "name": "Python: 当前文件",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/system-test/test.py",
            "args" : ["${input:chooseArgs}"],
            "console": "integratedTerminal"
        }
    ],
    "inputs": [
        {
          "id": "chooseArgs",
          "type": "command",
          "command": "extension.commandvariable.transform",
          "args": {
            "text": "-f ${relativeFile}", //strange, 每个空格前都会加个\
            "find": "\\ tests\/system-test\/", 
            "replace": ""
          }
        }
    ]
}